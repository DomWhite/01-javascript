
<%= form_for @dish do |f| %> 
<p> 
	<%= f.label :title, :id => 'some_id' %>
	<%= f.text_field :title %>
</p>
<p> 
	<label for="">Upload File</label>
	<%= f.file_field :photo %>
</p> 
<p>
	<label for="">Remote photo url</label>
	<%= f.text_field :remote_photo_url %>
	<!-- carrierwave uses the sintax: remote_"resource"_url -->
</p>
<p> 
	<%= f.label :image_url %>
	<%= f.text_field :image_url %>
	</p> 
<p> 
	<!-- rails helper function  field |collection |save | display      -->
	<%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
</p> 
	<%= f.submit %>
 <% end %>